params {
  // initialise default parameters 
  // otherwise nextflow complains
  bed = false
  bim = false
  fam = false
  vcf = false
  
  convertBuild = false
  qc = false
  popStrat = false
  impute = false
  postImpute = false
  gwas = false
  help = false
}

profiles {
  conda {
    includeConfig 'conf/conda.config'
  }
  docker {
    docker.enabled = true
    fixOwnership = true
    runOptions = "-u \$(id -u):\$(id -g)"
    includeConfig 'conf/docker.config'
  }
}

manifest {
  author = 'Benjamin Wingfield'
  description = 'Nextflow pipeline for running the snpQT pipeline'
  mainScript = 'main.nf'
  nextflowVersion = '>=20.01.0'
  version = '0.1.0'
}
