Bootstrap: docker
From: ubuntu:18.04
Stage: spython-base

%files
    impute5_v1.1.4.zip /opt/
    
%post
    apt-get update && apt-get -y install unzip 
    unzip /opt/impute5_v1.1.4.zip -d /opt/
    mkdir -p /opt/impute5
    mv /opt/impute5_v1.1.4/impute5_1.1.4_static /opt/impute5/impute5_1.1.4_static
    mv /opt/impute5_v1.1.4/imp5Converter_1.1.4_static /opt/impute5/imp5Converter_1.1.4_static
    chmod +x /opt/impute5/imp5Converter_1.1.4_static /opt/impute5/impute5_1.1.4_static
    PATH="/opt/impute5/:${PATH}"

%environment
    export PATH="/opt/impute5/:${PATH}"
  
%runscript
    exec /bin/bash "$@"
  
%startscript
    exec /bin/bash "$@"

%labels
    Author b.wingfield@ulster.ac.uk
    Version v0.0.1

%help
    This singularity definition file demonstrates how to create a singularity
    container for impute5 v5.1.1.4. It shouldn't be built unless you've accepted
