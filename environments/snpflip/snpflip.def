Bootstrap: docker
From: ubuntu:xenial-20200619
Stage: spython-base

%post

apt-get update && apt-get -y install python curl unzip
curl https://bootstrap.pypa.io/pip/2.7/get-pip.py --output get-pip.py && python get-pip.py
pip2 install pandas==0.21.0 snpflip
curl http://s3.amazonaws.com/plink1-assets/plink_linux_x86_64_20200616.zip --output /opt/plink.zip
unzip /opt/plink.zip -d /opt/plink/
PATH="/opt/plink:${PATH}"

%environment
export PATH="/opt/plink:${PATH}"
%runscript
exec /bin/bash "$@"
%startscript
exec /bin/bash "$@"
